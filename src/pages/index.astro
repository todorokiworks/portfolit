---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import InfoWidgets from "../components/InfoWidgets.astro";
import SkillsWidget from "../components/SkillsWidget.astro";
import ProjectsWidget from "../components/ProjectsWidget.astro";
import ExperienceWidget from "../components/ExperienceWidget.astro";
import ContactSection from "../components/ContactSection.astro";
import BlogWidgets from "../components/BlogWidgets.astro";
import AchievementsWidget from "../components/AchievementsWidget.astro";
import TestimonialsWidget from "../components/TestimonialsWidget.astro";
---

<Layout title="LUCA design studio">
  <main>
    <Hero />

    <section class="py-20 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="mb-8">
          <InfoWidgets />
        </div>
        <!--<div class="space-y-8 mb-8">
          <AchievementsWidget />
        </div> -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <SkillsWidget />
          <ProjectsWidget />
        </div>
        <!--<div class="space-y-8 mb-8">
          <ExperienceWidget />
        </div> -->
        <!--<div class="space-y-8 mb-8">
          <BlogWidgets />
        </div> -->
        <!--  <div class="space-y-8 mb-8">
          <TestimonialsWidget />
        </div> -->
        <div class="space-y-8 mb-8">
          <ContactSection />
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animate widgets on scroll
  // Animate white background widgets
  gsap.utils.toArray(".bg-white\\/80").forEach((widget: any) => {
    gsap.from(widget, {
      y: 50,
      opacity: 0,
      duration: 1,
      scrollTrigger: {
        trigger: widget,
        start: "top bottom-=100",
        toggleActions: "play none none reverse",
      },
    });
  });

  // Animate achievements widget
  gsap.utils.toArray(".bg-gradient-to-r").forEach((widget: any) => {
    gsap.from(widget, {
      y: 50,
      opacity: 0,
      duration: 1,
      scrollTrigger: {
        trigger: widget,
        start: "top bottom-=100",
        toggleActions: "play none none reverse",
      },
    });
  });
</script>
