---
interface Skill {
  name: string;
  level: "Expert" | "Advanced" | "Intermediate";
  icon: string;
}

const skills: Skill[] = [
  { name: "HTML", level: "Advanced", icon: "💻" },
  { name: "CSS", level: "Advanced", icon: "🎨" },
  { name: "JavaScript", level: "Advanced", icon: "⚡" },
  { name: "TypeScript", level: "Intermediate", icon: "📘" },
  { name: "React", level: "Intermediate", icon: "⚛️" },
  { name: "Astro.js", level: "Intermediate", icon: "🟢" },
  { name: "Wordpress", level: "Advanced", icon: "📓" },
];

const levelColors = {
  Expert: "bg-blue-100 text-blue-700",
  Advanced: "bg-green-100 text-green-700",
  Intermediate: "bg-yellow-100 text-yellow-700",
};
---

<div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <h3 class="text-2xl font-semibold mb-4">Skills</h3>
  <div class="space-y-4">
    {
      skills.map((skill) => (
        <div class=" flex items-center justify-between p-3 hover:bg-apple-gray-50 rounded-xl transition-colors">
          <div class="flex items-center gap-3">
            <span class="text-xl">{skill.icon}</span>
            <span class="font-medium text-apple-gray-500">{skill.name}</span>
          </div>
          <span
            class={`px-3 py-1 rounded-full text-sm font-medium ${levelColors[skill.level]}`}
          >
            {skill.level}
          </span>
        </div>
      ))
    }
  </div>
</div>

