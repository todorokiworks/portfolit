<section
  id="contact"
  class="bg-white/80 backdrop-blur-lg rounded-3xl p-8 shadow-xl"
>
  <h3 class="text-2xl font-semibold mb-6">Contact</h3>

  <div class="grid md:grid-cols-2 gap-8">
    <!-- Contact Form -->
    <div class="space-y-6">
      <div>
        <label
          for="name"
          class="block text-sm font-medium text-apple-gray-400 mb-2"
        >
          Name
        </label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-3 rounded-xl bg-white/50 border border-apple-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
          placeholder="Your name"
        />
      </div>

      <div>
        <label
          for="email"
          class="block text-sm font-medium text-apple-gray-400 mb-2"
        >
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-3 rounded-xl bg-white/50 border border-apple-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
          placeholder="your@email.com"
        />
      </div>

      <div>
        <label
          for="message"
          class="block text-sm font-medium text-apple-gray-400 mb-2"
        >
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="4"
          class="w-full px-4 py-3 rounded-xl bg-white/50 border border-apple-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors resize-none"
          placeholder="Your message..."></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium px-6 py-3 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-lg hover:shadow-xl"
      >
        Send Message
      </button>
    </div>

    <!-- Contact Information -->
    <div class="space-y-6">
      <div class="bg-blue-50 rounded-2xl p-6">
        <h4 class="text-lg font-medium text-apple-gray-500 mb-4">
          Contact Information
        </h4>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <div
              class="w-10 h-10 flex items-center justify-center bg-blue-100 rounded-full"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5 text-blue-600"
              >
                <path
                  d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
                ></path>
