---
interface BlogPost {
  title: string;
  excerpt: string;
  date: string;
  readTime: string;
  category: string;
}

const recentPosts: BlogPost[] = [
  {
    title: "Building Scalable Web Applications",
    excerpt: "Learn about the best practices for building scalable and maintainable web applications...",
    date: "2024-02-15",
    readTime: "5 min",
    category: "Development"
  },
  {
    title: "The Future of AI in Software Development",
    excerpt: "Exploring how artificial intelligence is transforming the way we write and maintain code...",
    date: "2024-02-10",
    readTime: "4 min",
    category: "AI"
  }
];
---

<div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <div class="md:flex justify-between items-center mb-6">
    <h3 class="text-2xl font-semibold text-blue-900">Recent Blog Posts</h3>
    <a href="/blog" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">View all posts →</a>
  </div>
  <div class="space-y-6">
    {recentPosts.map((post) => (
      <article class="group">
        <a href={`/blog/${post.title.toLowerCase().replace(/\s+/g, '-')}`} class="block p-4 rounded-2xl hover:bg-blue-50/50 transition-all duration-300">
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-2 mb-2">
            <span class="px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-xs font-medium w-fit">
              {post.category}
            </span>
            <div class="flex items-center gap-2 text-blue-400 text-sm">
              <span>{post.date}</span>
              <span>•</span>
              <span>{post.readTime} read</span>
            </div>
          </div>
          <h4 class="text-lg font-medium text-blue-900 mb-2 group-hover:text-blue-600 transition-colors">
            {post.title}
          </h4>
          <p class="text-blue-600/80 text-sm line-clamp-2">
            {post.excerpt}
          </p>
        </a>
      </article>
    ))}
  </div>
</div>
