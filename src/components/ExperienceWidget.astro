---
interface Experience {
  title: string;
  company: string;
  period: string;
  description: string[];
  technologies: string[];
}

interface Education {
  degree: string;
  school: string;
  period: string;
  achievements: string[];
}

const experiences: Experience[] = [
  {
    title: "Senior Software Engineer",
    company: "Tech Solutions Inc.",
    period: "2021 - Present",
    description: [
      "Led development of cloud-native applications using microservices architecture",
      "Mentored junior developers and conducted code reviews",
      "Improved system performance by 40% through optimization"
    ],
    technologies: ["React", "Node.js", "AWS", "Docker"]
  },
  {
    title: "Software Developer",
    company: "Digital Innovations",
    period: "2019 - 2021",
    description: [
      "Developed full-stack web applications for enterprise clients",
      "Implemented CI/CD pipelines reducing deployment time by 60%"
    ],
    technologies: ["Vue.js", "Python", "PostgreSQL"]
  }
];

const education: Education[] = [
  {
    degree: "Master of Science in Computer Science",
    school: "Tech University",
    period: "2017 - 2019",
    achievements: [
      "Specialized in Machine Learning and AI",
      "Published research paper on Neural Networks",
      "GPA: 3.9/4.0"
    ]
  },
  {
    degree: "Bachelor of Science in Software Engineering",
    school: "State University",
    period: "2013 - 2017",
    achievements: [
      "Dean's List all semesters",
      "Led Programming Club",
      "Completed honors thesis on distributed systems"
    ]
  }
];
---

<div class="space-y-8">
  <div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
    <h3 class="text-2xl font-semibold mb-6">Work Experience</h3>
    <div class="space-y-6">
      {experiences.map((exp) => (
        <div class="border-l-2 border-blue-500 pl-4 pb-6">
          <div class="flex flex-col sm:flex-row justify-between items-start gap-2 mb-4">
            <div>
              <h4 class="text-xl font-medium text-apple-gray-500">{exp.title}</h4>
              <p class="text-apple-gray-400">{exp.company}</p>
            </div>
            <span class="text-sm text-apple-gray-300 bg-apple-gray-100 px-3 py-1 rounded-full whitespace-nowrap">
              {exp.period}
            </span>
          </div>
          <ul class="list-disc list-inside text-apple-gray-400 mb-3 space-y-1">
            {exp.description.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <div class="flex flex-wrap gap-2">
            {exp.technologies.map((tech) => (
              <span class="px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
    <h3 class="text-2xl font-semibold mb-6">Education</h3>
    <div class="space-y-6">
      {education.map((edu) => (
        <div class="border-l-2 border-blue-500 pl-4 pb-6">
          <div class="flex flex-col sm:flex-row justify-between items-start gap-2 mb-4">
            <div>
              <h4 class="text-xl font-medium text-apple-gray-500">{edu.degree}</h4>
              <p class="text-apple-gray-400">{edu.school}</p>
            </div>
            <span class="text-sm text-apple-gray-300 bg-apple-gray-100 px-3 py-1 rounded-full whitespace-nowrap">
              {edu.period}
            </span>
          </div>
          <ul class="list-disc list-inside text-apple-gray-400 space-y-1">
            {edu.achievements.map((achievement) => (
              <li>{achievement}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</div>
